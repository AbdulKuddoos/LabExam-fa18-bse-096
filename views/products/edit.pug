extends ../layout

block content
    .row
        .col-sm-3
        .col-sm-6 
            h1 Edit Product
            form(action="/products/edit/"+product._id,method="post")
                .form-group
                    label(for="name") Product Name
                    input#name(type="text", class="form-control", name="name", value=product.name required)
                .form-group
                    label(for="price") Product Price
                    input#price(type="text", class="form-control", name="price", value=product.price required)
                .form-group
                    label(for="description") Product Description
                    input#dedscription(type="text", class="form-control", name="description" value=product.description)
                input(type="submit", class="btn btn-info")
        .col-sm-3