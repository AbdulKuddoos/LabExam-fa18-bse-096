extends ../layout

block content
    .row
        .col-sm-3
        .col-sm-6 
            form(action="/products/add",method="post")
                .form-group
                    label(for="name") Product Name
                    input#name(type="text", class="form-control", name="name" required)
                .form-group
                    label(for="price") Product Price
                    input#price(type="text", class="form-control", name="price" required)
                .form-group
                    label(for="description") Product Description
                    input#dedscription(type="text", class="form-control", name="description")
                input(type="submit", class="btn btn-info")
        .col-sm-3